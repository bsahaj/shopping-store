            </div>
          {{else}}
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="/" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              User Management
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="/user/signin">User Sign In</a>
              <a class="dropdown-item" href="/user/signup">User Sign Up</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="/company/companysignin">Company Sign In</a>
              <a class="dropdown-item" href="/company/companysignup">Compnay Sign Up</a>
            </div>
          </li>
          {{/if}}

          <li class="nav-item">
            <a class="nav-link" href="/cart/shopping-cart">Cart
              <span class="badge badge-dark">{{session.cart.totalQty}}</span>
            </a>
          </li>

        </ul>
