<div class="userProducts">
    <div class="card card-signin my-5">
        <form class="userProducts" action="/products" method="POST">
        <div class="card-body">
          <h5 class="card-title text-center">Add Products:</h5>
          <form class="form-profile">
            <div class="form-label-group">
              <input type="text" id="productImagePath" name="productImagePath" class="form-control" placeholder="Image Path">
              <label for="productImagePath">Image Path URL</label>
            </div>
            <div class="form-label-group">
              <input type="text" id="productName" name="productName" class="form-control" placeholder="Product Name">
              <label for="productName">Product Name</label>
            </div>
            <div class="form-label-group">
              <input type="text" id="productPrice" name="productPrice" class="form-control" placeholder="Product Price">
              <label for="productPrice">Product Price</label>
            </div>
            <div class="form-label-group">
              <textarea type="text" id="productDis" name="productDis" class="form-control" placeholder="Product Discription:"></textarea>
            </div>
            <button class="btn btn-lg btn-outline-secondary btn-block text-uppercase" type="submit">Add Product</button>
          </form>
        </div>
    </div>
  </form>
</div>
