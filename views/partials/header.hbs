        <a class="btn btn-outline-danger my-2 my-sm-0" role="button" href="/user/logout">Sign Out</a>
          {{else}}
        <a href="/user/signin" class="btn btn-outline-success" role="button">Sign In</a>
        <a href="/user/signup" class="btn btn-outline-primary" role="button">Sign Up</a>
